@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h3 id="meals" style="margin-top: 100px">Meals</h3>

<div class="card-columns">
    @foreach (var item in Model.Meals)
    {
    <div class="card">
        <img src="@item.Image" style="width: 300px; height: 300px" class="card-img-top" alt="@item.Name">
        <div class="card-body">
            <h5 class="card-title">@item.Name</h5>
            <p class="card-text">@item.Description</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <h4 class="text-center">@item.Price.ToString("C")</h4>
            </li>
            <li class="list-group-item">
                <div class="form-check-inline d-flex justify-content-center">
                    <label class="form-check-label" for="quantity">
                        Quantity&nbsp;
                    </label>
                    <input class="form-check-input" type="number" asp-for="@item.SelectedQuantity" value="@item.SelectedQuantity" id="quantity" style="width: 4rem;">
                </div>
            </li>
        </ul>
        <div class="card-body d-flex justify-content-center">
            <a href="#" class="card-link">See meal details</a>
        </div>
    </div>
    }
</div>

